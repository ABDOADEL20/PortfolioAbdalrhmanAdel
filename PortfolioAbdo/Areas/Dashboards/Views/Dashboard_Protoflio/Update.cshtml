
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="Create" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectName"]:</label>
                <input type="text" class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectPhoto"]:</label>
                <input type="file" class="form-control-file form-control-rounded" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectService"]:</label>
                <select class="custom-select">
                    <option>Web Dev</option>
                </select>
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectDescription"]:</label>
                <textarea name="Description" placeholder="Description" id="message" rows="8" class="shadow form-control form-control-lg"></textarea>
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectClient"]:</label>
                <input type="text" class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectDate"]:</label>
                <input type="date" class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ProjectGitHubLink"]:</label>
                <input type="url" class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Update"] class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
