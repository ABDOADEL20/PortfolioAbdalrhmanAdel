@model IEnumerable<IdentityRole>
@{
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<input onclick="showInPopup('@Url.Action("Create","Roles",new { Area = "Dashboards" },null,null)', '@SharedLocalizer["CreateNewRoles"]')" type="button" class="btn btn-outline-info" value='@SharedLocalizer["CreateNewRoles"]' />
<br />
<br />
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <center><h5 class="card-title">@SharedLocalizer["RolesTable"]</h5></center>
                    <div class="body">
                        <div class="table-responsive">
                            <br />
                            <table id="example" class="table table-bordered table-striped table-hover js-basic-example dataTable text-center font-weight-bold">
                                <thead>
                                    <tr>
                                        <th scope="col">@SharedLocalizer["Id"]</th>
                                        <th scope="col">@SharedLocalizer["Name"]</th>
                                        <th scope="col">@SharedLocalizer["Update"]</th>
                                        <th scope="col">@SharedLocalizer["Delete"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <th scope="col">@item.Name</th>
                                            <td><a class="btn btn-info" onclick="showInPopup('@Url.Action("Edit","Roles",new { Area = "Dashboards",id=item.Id },null,null)', '@SharedLocalizer["UpdateRole"]')">@SharedLocalizer["Update"]</a></td>
                                            <td><a class="btn btn-danger" onclick="showInPopup('@Url.Action("Delete","Roles",new { Area = "Dashboards",id=item.Id },null,null)', '@SharedLocalizer["DeleteRole"]')">@SharedLocalizer["Delete"]</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="form">
        <div class="modal-content" style="background-image: linear-gradient(45deg, #1565C0, #1E88E5); ">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>


@section DataTableScripts{
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Plfrtip',
                language: {
                    searchPanes: {
                        emptyPanes: 'There are no panes to display. :/'
                    }
                },
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All'],
                ],
                dom: 'Bfrtip',
                buttons: [
                    'pageLength',
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5',
                    'print'
                ]
            });
        });
    </script>
}
