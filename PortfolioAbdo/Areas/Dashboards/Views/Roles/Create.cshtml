@model IdentityRole
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="Create" asp-controller="Roles" asp-area="Dashboards">
            <div class="form-group">
                <label asp-for="Name" class="control-label">@SharedLocalizer["Name"]:</label>
                <input asp-for="Name" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Create"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

