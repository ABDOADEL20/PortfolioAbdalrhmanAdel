@model IdentityRole

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit" asp-controller="Roles" asp-area="Dashboards" method="post">
            <div class="form-group">
                <label asp-for="Id" class="control-label">@SharedLocalizer["ID:"]</label>
                <input asp-for="Id"  type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@SharedLocalizer["Name"]:</label>
                <input asp-for="Name" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Update"] class="btn btn-primary" />
            </div>
        </form>
        <a class="btn btn-warning btn-block" onclick="showInPopup('@Url.Action("AddOrRemoveUsers","Roles",new { Area = "Dashboards",RoleId=Model.Id },null,null)', '@SharedLocalizer["AddOrRemoveUsers"]')">@SharedLocalizer["AddOrRemoveUsersWithRole"]</a>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="form">
        <div class="modal-content" style="background-image: linear-gradient(45deg, #1565C0, #1E88E5); ">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>