@model MultipleModels
@{
    ViewData["Title"] = SharedLocalizer["DashboardTestimonials"];
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
    ViewBag.PageModelUser = Model.ApplicationUserVm;
}

<body>
    @*<input onclick="showInPopup('@Url.Action("Create","Dashboard_Testimonials",new { Area = "Identity" },null,null)','Create New Item In Protoflio')" type="button" class="btn btn-outline-info" value="Create New Item" />
        <br /><br />*@
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <center><h5 class="card-title">@SharedLocalizer["TestimonialsTable"]</h5></center>
                    <div class="table-responsive">
                        <table id="example" class="table table-bordered table-striped table-hover js-basic-example dataTable text-center font-weight-bold">
                            <thead>
                                <tr>
                                    <th scope="col">@SharedLocalizer["Id"]</th>
                                    <th scope="col">@SharedLocalizer["Photo"]</th>
                                    <th scope="col">@SharedLocalizer["Name"]</th>
                                    <th scope="col">@SharedLocalizer["JobTitle"]</th>
                                    <th scope="col">@SharedLocalizer["UserID"]</th>
                                    <th scope="col">@SharedLocalizer["Details"]</th>
                                    <th scope="col">@SharedLocalizer["Delete"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TestimonialsVmAll)
                                {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    @if (item.Photo != null)
                                    {
                                        <td><img src="~/PhotoFiles/PhotoProfile/@item.Photo" class="img-circle" width="50" height="50" style=" border-radius: 50%; " /></td>
                                    }
                                    else
                                    {
                                        <td><img src="~/img/img_avatar1.png" class="img-circle" width="50" height="50" style=" border-radius: 50%; " /></td>
                                    }
                                    <th scope="col">@item.Name</th>
                                    <th scope="col">@item.JobTitle</th>
                                    <th scope="col">@item.ApplicationUserId</th>
                                    <td><a class="btn btn-success" onclick="showInPopup('@Url.Action("Details","Dashboard_Testimonials",new { Area = "Dashboards",id=item.Id },null,null)', '@SharedLocalizer["DetailsTestimonials"]')">@SharedLocalizer["Details"]</a></td>
                                    <td><a class="btn btn-danger" onclick="showInPopup('@Url.Action("Delete","Dashboard_Testimonials",new { Area = "Dashboards",id=item.Id },null,null)', '@SharedLocalizer["DeleteTestimonials"]')">@SharedLocalizer["Delete"]</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="form">
        <div class="modal-content" style="background-image: linear-gradient(45deg, #1565C0, #1E88E5); ">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

@section DataTableScripts{
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Plfrtip',
                language: {
                    searchPanes: {
                        emptyPanes: 'There are no panes to display. :/'
                    }
                },
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All'],
                ],
                dom: 'Bfrtip',
                buttons: [
                    'pageLength',
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5',
                    'print'
                ]
            });
        });
    </script>
}

