@section DataTableScripts{
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Plfrtip',
                language: {
                    searchPanes: {
                        emptyPanes: 'There are no panes to display. :/'
                    }
                },
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All'],
                ],
                dom: 'Bfrtip',
                buttons: [
                    'pageLength',
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5',
                    'print'
                ]
            });
        });
    </script>
