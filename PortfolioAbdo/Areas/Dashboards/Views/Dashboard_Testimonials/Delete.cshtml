
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="Update" enctype="multipart/form-data">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Name"]:</label>
                <input type="text" readonly class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Photo"]:</label>
                <input type="file" class="form-control-file form-control-rounded" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Email"]:</label>
                <input type="text" readonly class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["JobTitle"]:</label>
                <input type="text" readonly class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["CompanyName"]:</label>
                <input type="text" readonly class="form-control" />
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["YourMessage"] :</label>
                <textarea name="YourMessage" readonly placeholder="Your Message" id="message" rows="8" class="shadow form-control form-control-lg"></textarea>
                @*<span asp-validation-for="BeneficiaryName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
