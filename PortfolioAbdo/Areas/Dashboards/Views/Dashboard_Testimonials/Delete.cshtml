@model TestimonialsVm
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="Delete" asp-controller="Dashboard_Testimonials" asp-area="Dashboards" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Name"]:</label>
                <input asp-for="Name" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Photo"]:</label>
                @if (Model.Photo == null)
                {
                    <img src="~/img/img_avatar1.png" class="img-circle" width="80" height="80" style=" border-radius: 50%; " />
                }
                else
                {
                    <img src="~/PhotoFiles/PhotoProfile/@Model.Photo" class="img-circle" width="80" height="80" style=" border-radius: 50%; " />
                }
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Email"]:</label>
                <input asp-for="Email" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["JobTitle"]:</label>
                <input asp-for="JobTitle" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["CompanyName"]:</label>
                <input asp-for="CompanyName" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["YourMessage"] :</label>
                <textarea asp-for="Message" readonly placeholder="Your Message" id="message" rows="8" class="shadow form-control form-control-lg"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
