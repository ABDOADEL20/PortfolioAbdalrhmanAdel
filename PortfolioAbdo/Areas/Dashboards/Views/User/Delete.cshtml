@model IdentityUser
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-7">
        <form asp-action="Delete" asp-controller="User" asp-area="Dashboards">
            <div class="form-group">
                <label asp-for="Id" class="control-label">@SharedLocalizer["ID:"]</label>
                <input asp-for="Id" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">@SharedLocalizer["UserName"]:</label>
                <input asp-for="UserName" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@SharedLocalizer["Email"]:</label>
                <input asp-for="Email" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
