@model TestimonialsVm
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-9">
        <form asp-action="UpdateTestim" asp-controller="Profile" asp-area="Identity" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="JobTitle" />
            <input type="hidden" asp-for="ApplicationUserId" />

            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["YourMessage"]:</label>
                <textarea asp-for="Message" placeholder="Your Message" id="message" rows="8" class="shadow form-control form-control-lg"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
